---
import Layout from "../layouts/Layout.astro"

const res = await fetch('https://jsonplaceholder.typicode.com/comments')
const data = await res.json()

console.log(data)
---

<Layout title="Acerca de">
    <main>
        {data.map(posts => (
            <article class="Post" id={posts.id}>
                <span id={posts.postId}>Publicaci√≥n hecha por "{posts.name}" <br /> "{posts.email}"</span>
                <h2>{posts.name}</h2>
                <p>{posts.body}</p>
            </article>
        ))}
    </main>
</Layout>

<style>
    main {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        grid-template-rows: repeat(auto-fit, minmax(350px, 1fr));
    }
    .Post {
        width: 250px;
        height: 350px;
        border-radius: 10px;
        padding: 15px;
        gap: 10px;
    } 
    .Post > span {
        font-weight: lighter;
    }
</style>